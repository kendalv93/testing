<p id="notice"><%= notice %></p>

<h1>Listing Forms</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @forms.each do |form| %>
      <tr>
        <td> <%= form.created_at %></td>
        <td><%= link_to 'Show', form %></td>
        <td><%= link_to 'Edit', edit_form_path(form) %></td>
        <td><%= link_to 'Destroy', form, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<h3>Import a CSV File</h3>
<%= form_tag import_forms_path, multipart: true do %>
    <%= file_field_tag :file %>
    cosmo_sigma:
    <%= radio_button_tag :row, :cosmo_sigma %>
    cosmo_web:
    <%= radio_button_tag :row, :cosmo_web %>
    <%= submit_tag "Import CSV" %>
<% end %>

